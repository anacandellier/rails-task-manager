<div class= "container">
<h1 class="m-4">Tasks list</h1>

<ul class="list-unstyled">
<% @tasks.each do |task| %>
<li>
<% if task.completed == true %>
<i class="fa-solid fa-square-check"></i>
<% else%>
<i class="fa-regular fa-square"></i>
<% end%>
<%=link_to "#{task.title}", task_path(task), class: "text-decoration-none link-dark"%></li>
<% end %>
</ul>

<%= link_to "Add a new task", new_task_path %>

</div>
